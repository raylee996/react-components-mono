{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "module": "esnext",
    "strictNullChecks": true,
  },
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts"
  ]
}